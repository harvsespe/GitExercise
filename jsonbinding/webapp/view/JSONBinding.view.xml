<mvc:View controllerName="sapips.training.jsonbinding.controller.JSONBinding" xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel id="Panel1" headerText="Data Binding Basics" class="sapUiResponsiveMargin" width="auto">
                <f:SimpleForm id="sf1">
                    <f:content>
                        <Label text="EID" />
                        <Input value="{oAddressModel>/EID}" enabled="{oAddressModel>/enabled}" />
                        <Label text="Enabled" />
                        <CheckBox selected="{oAddressModel>/enabled}" />
                    </f:content>
                </f:SimpleForm>
            </Panel>
            <Panel headerText="Address Details" class="sapUiResponsiveMargin" width="auto">
                <f:SimpleForm id="sf2">
                    <f:content>
                        <Label text="Address" />
                        <Text text="{oAddressModel>/Address/Street} 
                                    {oAddressModel>/Address/City} 
                                    {oAddressModel>/Address/Zip} 
                                    {oAddressModel>/Address/Country}" class="sapUiSmallMarginBottom" />
                        <Link text="Send Email"
                            href="{ path: '{oAddressModel>/EID}', formatter: '.formatter.formatMail'}" />
                        <Label text="Sales Amount" class="sapUiSmallMarginBegin" />
                        <Input class="sapUiSmallMarginBegin" maxLength="8" value="{ parts: [ {path: 'oAddressModel>/SalesAmount'}, 
                                      {path: 'oAddressModel>/CurrencyCode'} ], 
                                       type: 'sap.ui.model.type.Currency', 
                                       formatOptions: {showMeasure: false} }" />
                    </f:content>
                </f:SimpleForm>
            </Panel>
            <Panel headerText="Aggregation Binding" class="sapUiResponsiveMargin" width="auto">
                <content>
                    <List items="{ProductsModel>/products}" mode="SingleSelectMaster" selectionChange="onSelectProduct">
                        <items>
                            <ObjectListItem title="{ProductsModel>ProductName}"
                                number="{ parts: [ {path: 'ProductsModel>UnitPrice'}, {path: 'oAddressModel>/CurrencyCode'} ], type: 'sap.ui.model.type.Currency', formatOptions: { showMeasure: false } }"
                                numberUnit="{oAddressModel>/CurrencyCode}">
                                <ObjectAttribute text="{ProductsModel>QuantityPerUnit}">
                                </ObjectAttribute>
                                <ObjectAttribute
                                text="{ parts: [ {path: 'ProductsModel>UnitPrice'}, {path: 'ProductsModel>UnitsInStock'}, {path: 'oAddressModel>/CurrencyCode'} ], formatter: '.formatter.formatStockValue' }">
                                </ObjectAttribute>
                            </ObjectListItem>
                        </items>
                    </List>
                </content>
            </Panel>
            <Panel id="Panel4" headerText="Product Detail" class="sapUiResponsiveMargin" width="auto">
                <f:SimpleForm id="sf3">
                    <f:content>
                        <Label text="Product ID" />
                        <Input value="{ProductsModel>ProductID}" />
                        <Label text="Product Name" />
                        <Input value="{ProductsModel>ProductName}" />             
                        <Label text="Quantity Per Unit" />
                        <Input value="{ProductsModel>QuantityPerUnit}" />    
                        <Label text="Unit Price" />
                        <Input value="{ProductsModel>UnitPrice}" />    
                        <Label text="Units In Stock" />
                        <Input value="{ProductsModel>UnitsInStock}" />    
                        <Label text="Units On Order" />
                        <Input value="{ProductsModel>UnitsOnOrder}" />    
                        <Label text="Reorder Level" />
                        <Input value="{ProductsModel>ReorderLevel}" />    
                        <Label text="Discontinued" />
                        <Input value="{ProductsModel>Discontinued}" />               
                    </f:content>
                </f:SimpleForm>            
            </Panel>
        </content>
    </Page>
</mvc:View>